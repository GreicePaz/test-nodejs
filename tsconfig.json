{
  "compilerOptions": {
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "declaration": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "lib": [
          "es2020"
      ],
      "moduleResolution": "node",
      "module": "commonjs",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "sourceMap": true,
      "target": "es2020",
      "outDir": "dist"
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}